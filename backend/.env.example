# Environment Configuration for Osrovnet
# Network Security Platform

# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
DATABASE_URL=sqlite:///db.sqlite3
# For PostgreSQL in production:
# DATABASE_URL=postgresql://username:password@localhost:5432/osrovnet

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Security Keys and API Tokens
SHODAN_API_KEY=your-shodan-api-key-here
MAXMIND_LICENSE_KEY=your-maxmind-license-key-here

# Network Security Settings
NMAP_TIMEOUT=300
SCAN_RATE_LIMIT=10
MAX_CONCURRENT_SCANS=5

# Threat Intelligence Settings
THREAT_DB_UPDATE_INTERVAL=3600
IOC_RETENTION_DAYS=90

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/osrovnet.log

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Email Configuration (for alerts)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=